# ====== Initialize counter ======
[math@0] > [store:fluid@counter]

# ====== Single-line Tag ======
[tag_single:[math@counter+1] > [store:fluid@counter] > [print@counter]]

# ====== Multi-line Tag ======
[tag_multi:
    [math@counter+1]
    [store:fluid@counter]
    [print@counter]
]

# ====== Run single-line tag 3 times ======
[loop3@tag_single]

# ====== Reset counter ======
[math@0] > [store:fluid@counter]

# ====== Run multi-line tag 3 times ======
[loop3@tag_multi]

# ====== Inline block execution ======
[math@5+5] > { [math@result*2] > [store:fluid@result] } > [print@result]

# ====== Conditionals ======
[math@50] > [store:fluid@score]
[if@score>=50]{
    [print@"Pass case hit"]
}[else]{
    [print@"Fail case hit"]
}

# ====== Conditionals fail case ======
[math@40] > [store:fluid@score]
[if@score>=50]{
    [print@"Pass case hit"]
}[else]{
    [print@"Fail case hit"]
}

# ====== Nested inline block inside tag ======
[tag_nested_block:
    [math@2+2]
    { [math@4*4] > [print@result] }
    [print@"Done nested block"]
]

[tag_nested_block]
